<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Doyen.TestApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Doyen.TestApp.MainView"
			 x:DataType="local:MainViewModel">
	<UserControl.DataContext>
		<local:MainViewModel />
	</UserControl.DataContext>
	<DockPanel>
		<StackPanel>
			<TextBlock Text="{Binding StatusMessage}"/>
			<TextBox Text="{Binding ScriptName}" Watermark="Script name . . ."
						HorizontalAlignment="Stretch"/>
			<Button Content="Connect" Command="{Binding ConnectToIndicatorCommand}" />
			<TextBox MaxWidth="240" TextWrapping="Wrap" IsEnabled="{Binding IsConnected}" Text="{Binding SetupJson}" Watermark="Json setup data . . ." />
			<Button Content="{Binding Mode}" IsEnabled="{Binding IsConnected}" Command="{Binding StartIndicatorCommand}" />
		</StackPanel>
		<ContentControl Content="{Binding AvaPlot}" />
	</DockPanel>
</UserControl>
